# ==============================================
# SERVER CONFIGURATION
# ==============================================
# PORT: The port number where your backend will run
# Example: http://localhost:5000
PORT=5000

# NODE_ENV: Tells the app if it's in development or production
# Values: development, production, test
NODE_ENV=development

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# MONGO_URI: Connection string to your MongoDB database
# Local MongoDB: mongodb://localhost:27017/pos_inventory
# MongoDB Atlas (cloud): mongodb+srv://username:password@cluster.mongodb.net/pos_inventory
MONGO_URI=mongodb://localhost:27017/pos_inventory

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# JWT_SECRET: Secret key to sign JWT tokens (make this VERY random and long)
# Generate one: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT_EXPIRE: How long JWT tokens are valid
# Examples: 1h (1 hour), 7d (7 days), 30d (30 days)
JWT_EXPIRE=7d

# BCRYPT_ROUNDS: How many times to hash passwords (higher = more secure but slower)
# Recommended: 10-12
BCRYPT_ROUNDS=10

# ==============================================
# CORS CONFIGURATION
# ==============================================
# CLIENT_URL: Your frontend URL (for CORS)
# Development: http://localhost:5173 (Vite default)
# Production: https://yourfrontend.com
CLIENT_URL=http://localhost:5173

# ==============================================
# RATE LIMITING
# ==============================================
# MAX_REQUESTS: Maximum requests per window
MAX_REQUESTS=100

# RATE_LIMIT_WINDOW: Time window in minutes
RATE_LIMIT_WINDOW=15
